                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Materias<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Agregar Materias", "Index", "tbl_materias")</li>
                            <li>@Html.ActionLink("Asignar materias", "Index", "tbl_asignacion")</li>
                        </ul>
                    </li>
                    @*<li>@Html.ActionLink("Materias", "Index", "tbl_materias")</li>
                    <li>@Html.ActionLink("Asignar materias", "Index", "tbl_asignacion")</li>*@
