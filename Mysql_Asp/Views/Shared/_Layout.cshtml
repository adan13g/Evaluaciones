                    <li>@Html.ActionLink("Roles", "Index", "tbl_usuarios")</li>*@

              
                    <li>@Html.ActionLink("Profesores", "Index", "tbl_profesores")</li>
                    <li>@Html.ActionLink("Alumnos", "Index", "tbl_alumnos")</li>

                    <li>@Html.ActionLink("Grupos", "Index", "tbl_grupos")</li>
                    <li>@Html.ActionLink("Semestres", "Index", "tbl_semestres")</li>
